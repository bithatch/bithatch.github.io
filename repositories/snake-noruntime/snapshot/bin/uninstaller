#!/bin/sh
realpath=$(readlink "$0")
if [ -z "${realpath}" ] ; then realpath="$0" ; fi
cd $(dirname ${realpath})/..
VM_OPTIONS="@uninstaller.args"
if [ -n "${JAVA_HOME}" ] ; then 
    JAVA_EXE=${JAVA_HOME}/bin/java
else
    JAVA_EXE=java
fi
while : ; do
    ${JAVA_EXE} ${VM_OPTIONS} -m com.sshtools.forker.updater/com.sshtools.forker.updater.Uninstaller ${APP_ARGS} $@
    ret=$?
    exit $ret
done
